<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/home_frag"
    android:id="@+id/mobile_navigation">

    <fragment
        android:name="com.absaweatherapp.ui.HomeFragment"
        android:id="@+id/home_frag"
        android:label="Weather"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/home_to_settings"
            app:destination="@id/settings_frag" />
        <action
            android:id="@+id/home_to_about"
            app:destination="@id/about_frag" />

    </fragment>

    <fragment
        android:name="com.absaweatherapp.ui.SettingsFragment"
        android:id="@+id/settings_frag"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
    </fragment>

    <fragment
        android:name="com.absaweatherapp.ui.SplashScreenActivity"
        android:label="About"
        tools:layout="@layout/fragment_slash"
        android:id="@+id/about_frag"
        />

</navigation>